extends layout

block content
  h1= title
  p Welcome to #{title}
  h2 Here are some lovely bungalows

  each bungalow in bungalows
    .bungalow
      a(href=`/bungalows/${bungalow.id}`)
        form(action="submit")
          h3 #{bungalow.name}
          p #{bungalow.price} TRY
          if bungalow.rating
            p #{bungalow.rating}
      button(type='button') Book Now
